{
  "compilerOptions": {
    "target": "es2022",
    "experimentalDecorators": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "types": ["express", "node"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@errors/*": ["errors/*"],
      "@utils/*": ["utils/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}